<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="sling:OsgiConfig"
    name="scddemo-sync-agent"
    title="SCD Demo Sync Agent"
    kind="agent"
    type="sync"
    details="Sling Content Distribution Sync Agent for coordinating content sync across the publish systems."
    enabled="{Boolean}true"
    serviceName="scddemo-sync-service"
    log.level="info"
    queue.processing.enabled="{Boolean}true"
    packageExporter.endpoints="[http://localhost:4503/libs/sling/distribution/services/exporters/scddemo,http://localhost:4504/libs/sling/distribution/services/exporters/scddemo]"
    packageImporter.endpoints="[http://localhost:4503/libs/sling/distribution/services/importers/scddemo,http://localhost:4504/libs/sling/distribution/services/importers/scddemo]"
    retry.strategy="errorQueue"
    retry.attempts="10"
    pull.items="100"
    requestAuthorizationStrategy.target="(name=scddemo-privilege)"
    transportSecretProvider.target="target=(name=scddemo-transport-secret)"
    packageBuilder.target="(name=scddemo-vlt-packager)"
    triggers.target="(name=scddemo-sync-trigger)"
/>